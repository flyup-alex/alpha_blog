<%= render 'shared/errors', obj: @user %>
<center>
<div class = "row">
	<div class = "col-md-12">
	<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class = "form-group">
			<div class = 'control-label col-sm-2'>

				<%= f.label :username %>
			</div>
			<div class= 'col-sm-6'>
				<%= f.text_field :username, class: 'form-control', placeholder: "Your name", autofocus: true %>
			</div>
		</div>


		<div class = "form-group">
			<div class = 'control-label col-sm-2'>

				<%= f.label :email %>
			</div>
			<div class= 'col-sm-6'>
				<%= f.text_field :email, class: 'form-control', placeholder: "Your email" %>
			</div>
		</div>
			<div class = "form-group">
			<div class = 'control-label col-sm-2'>

				<%= f.label :password %>
			</div>
			<div class= 'col-sm-6'>
				<%= f.password_field :password, class: 'form-control', placeholder: "Set up your password" %>
			</div>
		</div>
		<div class= "col-sm-offset-2 cols-sm-10">
			<%= f.submit( @user.new_record? ? "Signup" : "Update article", class: "btn btn-primary btn-lg" ) %> 
		</div>
	</div>
</div>
</center>
<%end %>