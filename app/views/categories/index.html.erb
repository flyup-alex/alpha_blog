<h1 align="center">Listing All Categories</h1>
<div align="center">
	<br>
	<h4 align = 'center'><%= link_to "Create new category", new_category_path %></h1>
	<br>
	<%= will_paginate %>
	<% @categories.each do |category| %>
		<ul class= "listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					
						<h3><%= link_to "#{category.name}", category_path(category) %></h3>
							<h4 align = "center"><%= pluralize(category.articles.size, "article")   %></h4> 
				</div>
			</div>

		</ul>
	<% end %>
	<%= will_paginate %>

	<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
    
  </div>

