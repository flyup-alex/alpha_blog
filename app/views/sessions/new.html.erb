<center>
<h2 align = "center">Log in to this awesome blog!</h2>
<div class = "row">
	<div class = "col-md-12">
	<%= form_for( :session, :html => {class: "form-horizontal", role: "form"}, url: login_path ) do |f| %>
		<div class = "form-group">
			<div class = 'control-label col-sm-2'>
				<%= f.label :email %>
			</div>
			<div class= 'col-sm-6'>
				<%= f.email_field :email, class: 'form-control', placeholder: "enter your mail", autofocus: true %>
			</div>
		</div>
		<div class = "form-group">
			<div class = 'control-label col-sm-2'>

				<%= f.label :password %>
			</div>
			<div class= 'col-sm-6'>
				<%= f.password_field :password, class: 'form-control', autocomplete: false %>
			</div>
		</div>
		</div>
		<div class= "col-sm-offset-2 cols-sm-10">
			<%= f.submit "Log in", class: "btn btn-primary btn-lg"  %> 
		</div>
	</div>
</div>
</center>
<%end %>